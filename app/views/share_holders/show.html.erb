  </div>
</div>

<div class="row info-row">
  <div class="small-4 columns">
    <strong><%= ShareHolder.human_attribute_name('identifier') %>:</strong>
  </div>
  <div class="small-3 columns end">
    <%= @share_holder.identifier %>
  </div>
</div>

<div class="row info-row">
  <div class="small-4 columns">
    <strong><%= ShareHolder.human_attribute_name('contact') %>:</strong>
  </div>
  <div class="small-3 columns end">
    <%= @share_holder.contact %>
  </div>
</div>

<div class="row info-row">
  <div class="small-4 columns">
    <strong><%= ShareHolder.human_attribute_name('phone') %>:</strong>
  </div>
  <div class="small-3 columns end">
    <%= @share_holder.phone %>
  </div>
</div>

<div class="row info-row">
  <div class="small-4 columns">
    <strong><%= ShareHolder.human_attribute_name('email') %>:</strong>
  </div>
  <div class="small-3 columns end">
    <%= @share_holder.email %>
  </div>
</div>

