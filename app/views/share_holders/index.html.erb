<h1>Listing share_holders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Identifier</th>
      <th>Contact</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @share_holders.each do |share_holder| %>
      <tr>
        <td><%= share_holder.name %></td>
        <td><%= share_holder.identifier %></td>
        <td><%= share_holder.contact %></td>
        <td><%= share_holder.phone %></td>
        <td><%= share_holder.email %></td>
        <td><%= share_holder.location %></td>
        <td><%= link_to 'Show', share_holder %></td>
        <td><%= link_to 'Edit', edit_share_holder_path(share_holder) %></td>
        <td><%= link_to 'Destroy', share_holder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

