<h4><%= t('share.listing') %></h4>

<table>
  <thead>
    <tr>
      <th><%= Share.human_attribute_name('number') %></th>
      <th><%= ShareType.human_attribute_name('name') %></th>
      <th><%= Share.human_attribute_name('share_operation') %></th>
      <th><%= Share.human_attribute_name('share_issue') %></th>
    </tr>
  </thead>

  <tbody>
    <% @shares.each do |share| %>
      <tr>
        <td><%= share.number %></td>
        <td><%= share.share_type %></td>
        <td><%= share.share_operation %></td>
        <td><%= share.share_issue.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
