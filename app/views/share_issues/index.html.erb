<h1>Listing share_issues</h1>

<table>
  <thead>
    <tr>
      <th>Issue date</th>
      <th>Type</th>
      <th>Initial share</th>
      <th>Final share</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @share_issues.each do |share_issue| %>
      <tr>
        <td><%= share_issue.issue_date %></td>
        <td><%= share_issue.share_type %></td>
        <td><%= share_issue.initial_share %></td>
        <td><%= share_issue.final_share %></td>
        <td><%= share_issue.company.try(:name) %></td>
        <td><%= link_to 'Show', share_issue %></td>
        <td><%= link_to 'Edit', edit_share_issue_path(share_issue) %></td>
        <td><%= link_to 'Destroy', share_issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

