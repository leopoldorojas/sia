<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <fieldset>
    <legend><%= t('system_title') %></legend>
    
    <div>
      <%= f.email_field :email, autofocus: true, placeholder: t('devise_views.email') %>
    </div>

    <div>
      <%= f.password_field :password, autocomplete: "off", placeholder: t('devise_views.password') %>
    </div>

    <% if false && devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label t('devise_views.remember_me') %></div>
    <% end -%>

    <div>
      <%= f.submit t('devise_views.login'), class: "button tiny radius" %> <small>รณ <%= link_to t('devise_views.sign_up'), new_registration_path(resource_name) %></small>
    </div>
  </fieldset>
<% end %>

