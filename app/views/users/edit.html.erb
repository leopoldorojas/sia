<h4><%= t('user.editing') %></h4>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{pluralize(@user.errors.count, 'error')} #{t('user.save_failed')}" %></h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="small-12 columns">
      <div class="small-4 columns">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="small-3 columns">
        <%= f.label :email %>
        <%= f.text_field :email, readonly: true %>
      </div>

      <div class="small-3 columns">
        <%= f.label :company %>
        <%= f.collection_select :company_id, Company.all, :id, :name, prompt: t('user.prompt_company') %>
      </div>
      
      <div class="small-2 columns">
        <%= f.label :approved %>
        <%= f.check_box :approved %>
      </div>

    </div>
  </div>

  <div class="row small-12 columns">
	  <div class="actions">
	    <%= f.submit class: "button small radius" %>
	  </div>
	</div>

<% end %>